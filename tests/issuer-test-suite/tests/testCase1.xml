<?xml version="1.0" encoding="UTF-8"?>
<testcase id="testCase1_credentialOffer" xmlns="http://www.gitb.com/tdl/v1/" xmlns:gitb="http://www.gitb.com/core/v1/">
    <metadata>
        <gitb:name>[TC1] Credential Offer</gitb:name>
        <gitb:version>1.0</gitb:version>
        <gitb:description>Test case of the Credential Offer.</gitb:description>
    </metadata>
    <actors>
        <gitb:actor id="simulatedCredentialOffer" name="Simulated Credential Offer" />
        <gitb:actor id="issuer" name="Issuer" />
        <gitb:actor id="wallet" name="Wallet" role="SUT"/>
    </actors>
    <steps stopOnError="true">
        <log>"Test Credential Offer Endpoint at: " || $DOMAIN{issuerAddress} || "/credential_offer2"</log>
        
        <!--Making an HTTP Request to the Issuer's Credential Offer Endpoint -->
        <assign to="httpHeaders{Content-Type}">"application/json"</assign>
        <send id="credentialOffer" desc="Send Credential Offer request" handler="HttpMessagingV2" from="simulatedCredentialOffer" to="issuer">
            <input name="uri">$DOMAIN{issuerAddress} || "/credential_offer2"</input>
            <input name="method">"GET"</input>
            <input name="headers">$httpHeaders</input>
        </send>
        <verify id="checkStatusCode" handler="StringValidator" desc="Validate Credential Offer Response HTTP status">
            <input name="actual">$credentialOffer{response}{status}</input>
            <input name="expected">"200"</input>
            <input name="failureMessage">"The received HTTP status was not 200."</input>
        </verify>
        <log>"Credential Offer endpoint response status:" || $credentialOffer{response}{status}</log>
        <log>"Credential Offer endpoint response body:" || $credentialOffer{response}{body}</log>

        <!--Retrieve Data from Credential Offer Response-->
        <assign to="credentialOfferResponse" source="$credentialOffer{response}{body}" type="string"/> <!--Covert binary to string-->
        <process handler="JsonPathProcessor" operation="process" output="sessionID"> <!--Extract session_id from response-->
           <input name="content">$credentialOfferResponse</input>
           <input name="expression">"$.session_id"</input>
           <input name="outputType">"default"</input>
        </process>
        <log> "Credential Offer Response session ID:" || $sessionID</log>
        <process handler="JsonPathProcessor" operation="process" output="base64Img"> <!--Extract base64_img from response-->
           <input name="content">$credentialOfferResponse</input>
           <input name="expression">"$.base64_img"</input>
           <input name="outputType">"default"</input>
        </process>
        <log>"Credential Offer Response base64 image:" || $base64Img</log>

        <!--Display Credential Offer QrCode-->
        <process handler="Base64Processor" operation="decode"  output="img">
            <input name="input">$base64Img</input>
        </process>
        <interact inputTitle="Scan the QR Code" desc="Scan the QR Code with your wallet." with="wallet">
            <instruct desc="QR code to scan" contentType="BASE64" mimeType="image/png">$img</instruct>
        </interact>

        <!--Making an HTTP Request to the Issuer to retrieve sessionID logs to check Credential Offer success-->
        <log>"Retrieve logs at: " || $DOMAIN{issuerAddress} || "/logs?session_id=" || $sessionID</log>
        <assign to="attempt" type="number">1</assign>
        <assign to="maxAttempts" type="number">20</assign>
        <assign to="successful">false</assign>
        <assign to="success">"false"</assign>
        <assign to="logsResponse">'none'</assign>
        <while title="HTTP Call Loop to the Issuer" desc="Make HTTP calls until 20 attempts or until successful Credential Offer is detected">
            <cond><![CDATA[$attempt <= $maxAttempts and $success != "true"]]></cond>
            <do>
                <log>"Making HTTP request (attempt " || $attempt || ")..."</log>
                <send id="sessionIdLogs" desc="Retrieve logs to check Credential Offer success" handler="HttpMessagingV2" from="simulatedCredentialOffer" to="issuer">
                    <input name="uri">$DOMAIN{issuerAddress} || "/logs?session_id=" || $sessionID</input>
                    <input name="method">"GET"</input>
                    <input name="headers">$httpHeaders</input>
                </send>
                <assign to="logsResponse" type="string">$sessionIdLogs{response}{body}</assign> <!--Covert binary to string-->
                <process handler="JsonPathProcessor" operation="process" output="successful"> <!--Extract successful from response-->
                   <input name="content">$logsResponse</input>
                   <input name="expression">"$.successful"</input>
                   <input name="outputType">"default"</input>
                </process>
                <log>"Was Credential Offer successful? " || $successful</log>
                <assign to="success" type="string">$successful</assign>
                <assign to="attempt" type="number">$attempt + 1</assign>
                <process handler="DelayProcessor" operation="delay" input="5000"/> <!-- 5-second delay -->
            </do>
        </while>
        
        <verify id="checkLogsStatusCode" handler="StringValidator" desc="Validate logs retrieval HTTP status">
                <input name="actual">$sessionIdLogs{response}{status}</input>
                <input name="expected">"200"</input>
                <input name="failureMessage">"The received HTTP status was not 200."</input>
            </verify>
        <log>"Logs Retrieval status:" || $sessionIdLogs{response}{status}</log>
        <log>"Logs Retrieval body:" || $sessionIdLogs{response}{body}</log>

        <!--Retrieve Logs Response-->
        <process handler="JsonPathProcessor" operation="process" output="count"> <!--Extract count from response-->
           <input name="content">$logsResponse</input>
           <input name="expression">"$.count"</input>
           <input name="outputType">"default"</input>
        </process>
        <log>"Number of logs: " || $count</log>

        <verify id="checkSuccessful" handler="StringValidator" desc="Validate if Credential Offer was successful from logs">
            <input name="actual">$successful</input>
            <input name="expected">"true"</input>
            <input name="failureMessage">"The Credential Offer was not successful."</input>
        </verify>
        <log>"Credential Offer was successful? " || $successful</log>

        <process handler="JsonPointerProcessor" operation="process" output="logs"> <!--Extract logs from response-->
            <input name="content">$logsResponse</input>
            <input name="pointer">"/logs"</input>
        </process>
        <log>$logs</log>
        <interact inputTitle="Issuer Logs" desc="Inspect issuer logs">
            <instruct desc="Logs" mimeType="application/json">$logs</instruct>
        </interact>   
    </steps>
    <output>
        <success>
            <default>"Test session succeeded."</default>
        </success>
        <failure>
            <default>"Test session failed. Refer to the failed step's report for more details."</default>
        </failure>
    </output>
</testcase>